{
    "compilerOptions": {
		"module": "commonjs",
		"removeComments": true,
		"preserveConstEnums": true,
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"target": "ES6",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
    },
	"include": [
		"src/**/*"
    ],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
